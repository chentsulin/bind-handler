{
	"name": "bind-handler",
	"version": "0.1.0",
	"description": "My module",
  "main": "lib/index.js",
	"license": "MIT",
	"repository": "chentsulin/bind-handler",
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint src test examples",
    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm test -- --watch",
    "test:cov": "babel-node $(npm bin)/isparta cover $(npm bin)/_mocha -- --recursive",
    "check": "npm run lint && npm run test ",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/bind-handler.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/bind-handler.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build"
  },
	"author": {
		"name": "C.T. Lin",
		"email": "chentsulin@gmail.com",
		"url": "github.com/chentsulin"
	},
	"engines": {
		"node": ">=0.10.0"
	},
	"files": [
    "lib/",
		"index.js"
	],
	"keywords": [
		"bind",
    "autobind",
    "react",
    "handler"
	],
	"devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.22",
    "babel-eslint": "^4.1.0",
    "babel-loader": "^5.3.2",
    "chai": "^3.2.0",
    "eslint": "^1.3.1",
    "eslint-config-airbnb": "^0.0.8",
    "eslint-plugin-react": "^3.2.3",
    "isparta": "^3.0.3",
    "mocha": "*",
    "rimraf": "^2.4.2",
    "webpack": "^1.11.0"
	}
}
